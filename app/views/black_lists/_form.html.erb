<%= form_for(@black_list) do |f| %>
  <% if @black_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@black_list.errors.count, t('application.label.error')) %> <%= t('black_list.label.error') %>:</h2>

      <ul>
      <% @black_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :word %><br>
    <%= f.text_field :word %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
